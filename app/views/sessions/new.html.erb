<% provide :title, t("login") %>

<p>
  <h1><%= t("login") %></h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :session, url: login_path do |f| %>

        <%= f.label t("field_email") %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label t("field_password") %>
        <%= link_to t(".forgot_password"), new_password_reset_path %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t ".content_3" %></span>
        <% end %>

        <%= f.submit t("login"), class: "btn btn-primary" %>
      <% end %>

      <p><%= t ".content_1" %> <%= link_to t(".content_2"), signup_path %></p>
    </div>
  </div>
</p>
